<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40FFC107"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <item android:top="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#30FFC107"
                android:endColor="#15FFC107"/>
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="#26FFC107"/>
        </shape>
    </item>
</layer-list> 