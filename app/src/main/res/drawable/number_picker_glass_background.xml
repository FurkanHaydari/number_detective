<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Ana arka plan - yarı saydam siyah -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20000000" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Üst cam efekti -->
    <item android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#40FFFFFF"
                android:centerColor="#10FFFFFF"
                android:endColor="#05FFFFFF"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Kenar parlaklığı -->
    <item android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#20FFFFFF"
                android:centerColor="#05FFFFFF"
                android:endColor="#20FFFFFF"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>
