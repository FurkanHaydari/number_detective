<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/feature_item_background"
    android:padding="@dimen/padding_normal"
    android:layout_margin="@dimen/margin_small"
    android:clickable="true"
    android:focusable="true"
    android:elevation="8dp">

    <ImageView
        android:id="@+id/featureIcon"
        android:layout_width="@dimen/feature_icon_size"
        android:layout_height="@dimen/feature_icon_size"
        android:padding="@dimen/feature_icon_padding"
        android:scaleType="fitCenter"
        android:alpha="1.0"
        android:layout_marginBottom="@dimen/margin_small"/>

    <TextView
        android:id="@+id/featureTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_medium"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margin_normal"/>

</LinearLayout> 