<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/game_background"
    android:padding="16dp">

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <!-- İpuçları Container -->
    <LinearLayout
        android:id="@+id/hintsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/hints_container_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="8dp"/>

    <!-- Tahmin Bölümü -->
    <LinearLayout
        android:id="@+id/numberPickerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/picker_container_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:elevation="8dp"/>

    <TextView
        android:id="@+id/remainingAttemptsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/attempts_background"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAHMİN ET"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="18dp"
        android:textColor="@color/white"
        android:background="@drawable/submit_button_background"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="24dp"
        android:elevation="8dp"/>

    <!-- Boşluk için weight kullan -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- AdMob Banner Container -->
    <FrameLayout
        android:id="@+id/adContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ad_container_background"
        android:padding="8dp"
        android:elevation="8dp"/>
</LinearLayout>
