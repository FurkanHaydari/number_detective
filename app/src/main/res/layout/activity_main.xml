<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brain Focus"
        android:textColor="@color/neonBlue"
        android:textSize="32sp"
        android:textStyle="bold"
        android:shadowColor="@color/neonBlue"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:layout_marginBottom="48dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/singlePlayerButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Tek Oyunculu"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:backgroundTint="@color/colorSurface"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/challengeButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Meydan Oku"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:backgroundTint="@color/colorSurface"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/leaderboardButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Liderlik Tablosu"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:backgroundTint="@color/colorSurface"/>

</LinearLayout>
