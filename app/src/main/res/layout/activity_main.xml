<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brain Focus"
        android:textColor="@color/white"
        android:textSize="42sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_bold"
        android:letterSpacing="0.05"
        android:shadowColor="@color/textShadow"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="8"
        android:elevation="4dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/brainAnimation"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/brain_animation"
        app:layout_constraintBottom_toTopOf="@id/featuresContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/quoteContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#1AFFFFFF"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/titleText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/quoteText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:letterSpacing="0.02"
                android:textStyle="italic"
                android:gravity="center"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:id="@+id/quoteAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#F2FFFFFF"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/featuresContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:clipToPadding="false"
        android:animateLayoutChanges="true"
        app:layout_constraintTop_toBottomOf="@id/quoteContainer">

        <!-- Dikkat -->
        <LinearLayout
            android:id="@+id/dikkatContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/feature_item_background"
            android:padding="20dp"
            android:layout_margin="6dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="46dp"
                android:src="@drawable/dikkat"
                android:alpha="1.0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dikkat"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>
        </LinearLayout>

        <!-- Hafıza -->
        <LinearLayout
            android:id="@+id/hafizaContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/feature_item_background"
            android:padding="20dp"
            android:layout_margin="6dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="46dp"
                android:src="@drawable/hafiza"
                android:alpha="1.0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hafıza"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>
        </LinearLayout>

        <!-- Mantık -->
        <LinearLayout
            android:id="@+id/mantikContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/feature_item_background"
            android:padding="20dp"
            android:layout_margin="6dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="46dp"
                android:src="@drawable/mantik"
                android:alpha="1.0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mantık"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/featuresContainer">

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_light"
            android:lineSpacingMultiplier="1.3"
            android:letterSpacing="0.01"
            android:gravity="center"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:paddingHorizontal="4dp"
            android:shadowColor="#40000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/beyniniKoruButton"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="BEYNİNİ KORU!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="18dp"
        app:cornerRadius="28dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/warmOrangeNew"
        app:icon="@drawable/ic_play"
        app:iconSize="28dp"
        app:iconTint="@color/warmOrangeNew"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        android:elevation="8dp"
        android:stateListAnimator="@animator/button_state_list_anim"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@id/adContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <FrameLayout
        android:id="@+id/adContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:padding="2dp"
        android:background="@drawable/ad_container_background"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
